{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run ManimGL",
			"type": "shell",
			"command": "${workspaceFolder}/manimgl/bin/manimgl",
			"args": [
				"${file}"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"panel": "dedicated"
			},
			"problemMatcher": []
		},
		{
			"label": "Test ManimGL",
			"type": "shell",
			"command": "${workspaceFolder}/manimgl/bin/manimgl",
			"args": [
				"${file}",
				"-se",
				"${lineNumber}"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"panel": "shared"
			},
			"problemMatcher": []
		}
	]
}